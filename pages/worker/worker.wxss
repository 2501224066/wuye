.worker {
  padding-bottom: 4vh;
}

.content {
  padding: 40rpx;
}

.list {
  background: #fff;
  border-radius: 10rpx;
  padding: 0 40rpx 40rpx 40rpx;
}

.list>.item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #555;
  font-size: 28rpx;
}

.list>.item:last-child {
  border: none;
}

.list>.item>.label {
  width: 180rpx;
}

.list>.item>.center {
  flex: 1;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}

.list>.item>.center>input {
  flex: 1
}

.list>.item>.center>.img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.list>.item>.center>.radio {
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}

.list>.item>.center>.radio>radio {
  transform: scale(0.7);
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #5781F5;
  color: #fff;
  border-radius: 45rpx;
  font-size: 30rpx;
  margin-top: 100rpx
}
