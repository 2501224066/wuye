<view class="repairAdd">
  <Navbar1 text="{{title}}"></Navbar1>

  <view class="content">
    <view class="list shadow">
      <!-- 内容 -->
      <view class="title">内容描述</view>
      <view class="text">
        <textarea placeholder="请想起描述微信内容" placeholder-class="placeholder"></textarea>
      </view>
      <!--图片 -->
      <view class="title">添加图片/视频</view>
      <view class="imgbox">
        <view class="img">
          <image src="/images/camera.png" mode="aspectFill" style="width: 80rpx;height: 80rpx"></image>
        </view>
        <view class="img" wx:for="{{5}}">
          <image src="/images/t.png" mode="aspectFill"></image>
        </view>
        <view class="temp" wx:for="{{3}}" wx:key="{{index}}"></view>
      </view>
    </view>

    <view class="list shadow">
      <view class="item">
        <view class="label">服务地址</view>
        <view class="ipt">
          <input type="text" placeholder-class="placeholder" />
        </view>
      </view>
      <view class="item">
        <view class="label">姓名</view>
        <view class="ipt">
          <input type="text" placeholder-class="placeholder" />
        </view>
      </view>
      <view class="item">
        <view class="label">电话</view>
        <view class="ipt">
          <input type="text" placeholder-class="placeholder" />
        </view>
      </view>
      <view class="item">
        <view class="label">地址</view>
        <view class="ipt">
          <input type="text" placeholder-class="placeholder" />
        </view>
      </view>
    </view>

  </view>
</view>

<!-- 底部 -->
<view class="footer shadow" style="padding-bottom:{{iphoneFooter ? 34: 0}}rpx">
  <view class="fbox">
    <view class="btn">提交审核</view>
  </view>
</view>
