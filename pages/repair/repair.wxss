.content {
  padding: 40rpx;
}

.tab {
  display: flex;
  align-items: center;
  margin: 0 0 30rpx 0;
  font-size: 34rpx;
  overflow-x: auto;
}

.tab>.item {
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #a0a0a0;
  font-weight: 400;
  flex-basis: 16%;
  flex-shrink: 0;
}

.tab>.item>.sel {
  color: #2b2b2b;
}

.tab>.item>.line {
  width: 60rpx;
  height: 10rpx;
  margin-top: 14rpx;
}

.tab>.item>.blue {
  background: #0054ff;
}

.list>.item {
  margin-bottom: 40rpx;
  border-radius: 12rpx;
  padding: 0 30rpx;
  background: #fff;
}

.list>.item>.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #bfbfbf;
  font-size: 24rpx;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.list>.item>.top>.type {
  font-size: 30rpx;
}

.list>.item>.top>.type1 {
  color: #f73131;
}

.list>.item>.top>.type2 {
  color: #f73131;
}

.list>.item>.top>.type3 {
  color: #2828FF;
}

.list>.item>.server {
  padding: 25rpx 0;
}

.list>.item>.info {
  padding: 25rpx 0;
  border-radius: 10rpx;
}

.list>.item>.info>.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list>.item>.info>.title>.img {
  width: 35rpx;
  height: 35rpx;
}

.list>.item>.info>.title>.label {
  flex: 1;
  margin: 0 20rpx;
}

.list>.item>.info>.title>.price {
  color: #666;
}

.list>.item>.info>.title>.price>span {
  font-size: 22rpx;
  margin-right: 6rpx;
}

.list>.item>.info>.memo {
  font-size: 22rpx;
  color: #666;
  margin-top: 16rpx;
}
