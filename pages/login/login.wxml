<view class="login">
  <Navbar1 bgColor="#4763F4" iconColor="white" color="#fff" text="{{title[tabIndex]}}"></Navbar1>

  <view class="content">
    <swiper class="box shadow" current="{{tabIndex}}">

      <!-- 注册登陆 -->
      <swiper-item class="tab">
        <view class="list">
          <view class="item">
            <view class="img">
              <image src="/images/account.png" mode="aspectFill"></image>
            </view>
            <view class="ipt">
              <input type="text" placeholder="请输入手机号或账号" placeholder-class="placeholder" />
            </view>
          </view>
          <view class="item">
            <view class="img">
              <image src="/images/code.png" mode="aspectFill"></image>
            </view>
            <view class="ipt">
              <input type="text" placeholder="请输入验证码" placeholder-class="placeholder" />
            </view>
            <view class="btn">
              获取验证码
            </view>
          </view>
        </view>
        <view class="bottom">
          <view class="sub">登陆</view>
          <view class="agree">注册即代表同意<span>《服务和隐私协议》</span></view>
        </view>
      </swiper-item>

      <!-- 找回密码 -->
      <swiper-item class="tab">
        <view class="list">
          <view class="item">
            <view class="img">
              <image src="/images/account.png" mode="aspectFill"></image>
            </view>
            <view class="ipt">
              <input type="text" placeholder="请输入手机号或账号" placeholder-class="placeholder" />
            </view>
          </view>
          <view class="item">
            <view class="img">
              <image src="/images/code.png" mode="aspectFill"></image>
            </view>
            <view class="ipt">
              <input type="text" placeholder="请输入验证码" placeholder-class="placeholder" />
            </view>
            <view class="btn">
              获取验证码
            </view>
          </view>
          <view class="item">
            <view class="img">
              <image src="/images/password.png" mode="aspectFill"></image>
            </view>
            <view class="ipt">
              <input wx:if="{{pwdShow}}" type="password" placeholder="请重设密码" placeholder-class="placeholder" />
              <input wx:else type="password" placeholder="请重设密码" placeholder-class="placeholder" />
            </view>
            <view class="img" bindtap="pwdShow">
              <image wx:if="{{!pwdShow}}" src=" /images/unSee.png" mode="aspectFill"></image>
              <image wx:else src="/images/see.png" mode="aspectFill"></image>
            </view>
          </view>
        </view>
        <view class="bottom">
          <view class="sub">确定</view>
        </view>
      </swiper-item>
    </swiper>

    <!-- 切换 -->
    <view class="checkout" wx:if="{{tabIndex == 0}}" bindtap="checkoutTab">忘记密码</view>
    <view class="checkout" wx:else bindtap="checkoutTab">返回登陆</view>
  </view>
</view>