.content {
  box-sizing: border-box;
  border-radius: 50rpx 50rpx 0 0;
  background: #F4F8FB;
  padding: 40rpx 40rpx 10vh 40rpx;
}

.tab {
  display: flex;
  align-items: center;
  margin: 0 0 20rpx 0;
  font-size: 34rpx;
}

.tab>.item {
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #a0a0a0;
  font-weight: 400;
}

.tab>.item>.sel {
  color: #2b2b2b;
}

.tab>.item>.line {
  width: 60rpx;
  height: 10rpx;
  margin-top: 14rpx;
}

.tab>.item>.blue {
  background: #0054ff;
}

.list {
  margin-top: 30rpx;
}

.list>.gray {
  filter: grayscale(100%);
}

.list>.item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
  position: relative;
  box-shadow: 0px 7px 7px -7px rgba(0, 0, 0, 0.1);
}

.list>.item>.label {
  width: 50rpx;
  color: #fff;
  text-align: center;
  padding: 60rpx 20rpx 60rpx 30rpx;
  background: #F7D14A;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.list>.item>.info {
  flex: 1;
  padding: 40rpx;
}

.list>.item>.info>.title {
  font-size: 35rpx;
  font-weight: bold;
}

.list>.item>.info>.memo {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #a8a8a8;
}

.list>.item>.cover1 {
  position: absolute;
  left: 0;
  top: 50%;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-top: -25rpx;
  margin-left: -25rpx;
  z-index: 1;
  background: #F4F8FB;
  box-shadow: -10rpx 0 10rpx rgba(0, 0, 0, 0.1) inset;
}

.list>.item>.cover2 {
  position: absolute;
  right: 0;
  top: 50%;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-top: -25rpx;
  margin-right: -25rpx;
  background: #000;
  z-index: 1;
  background: #F4F8FB;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1) inset;
}

.list>.item>.img {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 0;
  top: 20%;
}
