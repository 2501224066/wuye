.order {
  background: #4763F4;
}

.content {
  box-sizing: border-box;
  border-radius: 50rpx 50rpx 0 0;
  background: #F4F8FB;
  padding: 40rpx 40rpx 10vh 40rpx;
  margin-top: 20rpx;
}

.tab {
  display: flex;
  align-items: center;
  margin: 0 0 20rpx 0;
  font-size: 34rpx;
}

.tab>.item {
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #a0a0a0;
  font-weight: 400;
}

.tab>.item>.sel {
  color: #2b2b2b;
}

.tab>.item>.line {
  width: 60rpx;
  height: 10rpx;
  margin-top: 14rpx;
}

.tab>.item>.blue {
  background: #0054ff;
}

.list {
  padding: 20rpx 0;
}
