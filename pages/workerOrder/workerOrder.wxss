.workerOrder {
  padding-bottom: 4vh;
}

.content {
  padding: 0 40rpx;
}

.list {
  padding: 40rpx 0;
}

.list>.item {
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
}

.list>.item>.top {
  padding: 30rpx;
  border-bottom: 1rpx dashed #f8f8f8;
  font-size: 34rpx;
}

.list>.item>.center {
  padding: 30rpx;
  color: #a8a8a8;
}

.list>.item>.center>.text {
  background: #f2f6fb;
  padding: 20rpx;
}

.list>.item>.time {
  padding: 0 30rpx 30rpx 30rpx;
  color: #999;
}
