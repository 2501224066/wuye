.banner {
  width: 100%;
  height: 500rpx;
}

.content {
  padding: 0 40rpx;
  box-sizing: border-box;
}

.notice {
  position: relative;
  margin-top: -45rpx;
}

.tab {
  display: flex;
  align-items: center;
  margin: 50rpx 0 20rpx 0;
  font-size: 34rpx;
}

.tab>.item {
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #a0a0a0;
  font-weight: 400;
}

.tab>.item>.sel {
  color: #2b2b2b;
}

.tab>.item>.line {
  width: 60rpx;
  height: 10rpx;
  margin-top: 14rpx;
}

.tab>.item>.blue {
  background: #0054ff;
}

.list {
  padding: 0 40rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-top: 40rpx;
}

.list>.label {
  padding-top: 30rpx;
  font-size: 32rpx;
}

.list>.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.list>.item:last-child {
  border: none;
}

.list>.item>.img {
  width: 40rpx;
  height: 60rpx;
}

.list>.item>.center {
  margin: 0 20rpx 0 30rpx;
}

.list>.item>.center>.memo {
  color: #bfbfbf;
  font-size: 22rpx;
  margin-top: 20rpx;
}

.list>.item>.price {
  flex: 1;
  color: #f73131;
  text-align: right;
}

.list>.item>.price>span {
  font-size: 22rpx;
  margin: 0 4rpx;
}

.list>.item>.r {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}
