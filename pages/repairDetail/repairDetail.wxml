<view class="repairDetail">
  <Navbar1 bgColor="#4763F4" iconColor="white" color="#fff" text="报修详情"></Navbar1>

  <!-- 背景圆 -->
  <view class="bgCir">
    <image src="/images/ellipse.png" mode="aspectFill"></image>
  </view>

  <!-- 状态 -->
  <view class="status">
    <view class="img">
      <image src="{{status[2].img}}" mode="aspectFill"></image>
    </view>
    <view>{{status[2].label}}</view>
  </view>

  <view class="content">
    <!-- 服务 -->
    <view class="pay shadow">
      <view class="top">
        <view class="img">
          <image src="/images/wallet.png"></image>
        </view>
        <view>待付款</view>
      </view>
      <view class="price"><span>- ¥</span>286.00</view>
    </view>

    <view class="list shadow">
      <view class="item">
        <view class="label">故障现象</view>
        <view class="text">阿大大的撒撒打算撒大的的撒大阿大阿大大</view>
      </view>
    </view>

    <view class="list shadow">
      <view class="file">
        <view class="block" wx:for="{{5}}">
          <image src="/images/t.png" mode="aspectFill"></image>
        </view>
        <view class="temp" wx:for="{{3}}" wx:key="index"></view>
      </view>
      <view class="item">
        <view class="label">服务住址</view>
        <view class="text">还擦但是看到撒的撒记得哈</view>
      </view>
      <view class="item">
        <view class="label">预约时间</view>
        <view class="text">2010.21.23 10:12</view>
      </view>
    </view>

    <view class="list shadow">
      <view class="item">
        <view class="label">订单编号</view>
        <view class="text">90312312312312</view>
      </view>
      <view class="item">
        <view class="label">下单时间</view>
        <view class="text">2020.01.21 10:23</view>
      </view>
    </view>

  </view>
</view>

<!-- 底部 -->
<view class="footer shadow" style="padding-bottom:{{iphoneFooter ? 34 + 20 :  20}}rpx">
  <view class="fbox">
    <view class="btn">立即支付</view>
  </view>
</view>
<view style="box-sizing:border-box; padding-bottom:{{iphoneFooter ? 34 + 20 : 20}}rpx;"></view>