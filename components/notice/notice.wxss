.notice {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #555;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  background: #fff;
}

.notice>.img {
  width: 80rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.notice>.text {
  height: 50rpx;
  line-height: 50rpx;
  flex: 1;
}
