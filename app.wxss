page {
  font-size: 30rpx;
  background: #F4F8FB;
  padding-bottom: 10vh;
}

/* 图片 */
image {
  width: 100%;
  height: 100%;
}

/* 阴影 */
.shadow {
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}

/* input-placeholder */
.placeholder {
  color: #bfbfbf;
}

/* 底部框 */
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 5%;
  box-sizing: border-box;
  background: #fff;
  z-index: 99;
}

.footer>.fbox>.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #5781F5;
  color: #fff;
  border-radius: 45rpx;
  font-size: 30rpx;
}

/* 模态框 */
.model {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  z-index: 999;
  background: rgba(0, 0, 0, 0.5);
}

.model>.other {
  width: 100%;
  flex: 1;
}

.model>.box {
  border-radius: 30rpx;
  overflow: hidden;
  background: #fff;
  position: relative;
  padding: 50rpx 40rpx 10vh 40rpx;
}

.model>.box>.close {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 椭圆背景 */
.bgCir {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 500rpx;
  z-index: -1;
}
